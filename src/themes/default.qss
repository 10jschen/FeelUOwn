/* ****************************** */
/* QSlider */
/* ****************************** */
QSlider {
  background: #CCCCCC;
}

QSlider::groove:horizontal {    /* 凹槽 */
    border: 0px solid #993333;
    position: absolute;
    top: -7px;
    height: 8px;
}

QSlider::sub-page:horizontal {  /* 滑过的区域 */
    background: #4F2F2F;
    background-color: #be4040;
}

QSlider::add-page:horizontal {  /* 剩余的部分, 未滑过的区域 */
    background: #999999;
}

QSlider::handle:horizontal {    /* 柄 */
    background: #993333;
    border: 0px solid #cccccc;
    border-radius: 4px;
    width: 8px;
    margin: -5px 0;
}

/* ****************************** */
/* QGroupBox */
/* ****************************** */

QGroupBox {
    background-color: white;
    border-right: 2px solid #993333;
    border-radius: 0px;
    margin-top: 10px;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left; /* position at the top center */
    padding: 0 3px;

}

/* ****************************** */
/* QWidget */
/* ****************************** */

QWidget {
    background-color: #272727;
    color: #CCCCCC;
}

QWidget#top_widget {
    border-bottom: 0px solid #AD0600;
}

QWidget#left_widget {
    background-color: #272727;
}

QWidget#right_widget {
    background-color: #272727;
}

QFrame#playlist_container {
    padding-left: 15px;
    border: 0px solid #993333;
}

QFrame#playlist_container:hover {
    background-color: #333;
    border-left:8px solid #993333;
    border-top: 10px solid #333;
    border-bottom: 10px solid #333;
}

QFrame#playlist_container_active {
    padding-left: 11px;
    border-left:4px solid #993333;
    background-color: #333;
}

/* ****************************** */
/* QPushButton */
/* ****************************** */

QPushButton {
    border: 0px solid #993333;
}

QPushButton:pressed {
    outline: none;
    background-color: #272727;
}

QPushButton:focus {
    outline: none;
    background-color: #272727;
}

QPushButton#play_pause {
    border-image: url(../icons/play_hover.png);
    width: 30px;
    height: 30px;
}

QPushButton#play_pause:checked {
    border-image: url(../icons/pause_hover.png);
}

QPushButton#last {
    border-image: url(../icons/last_hover.png);
    width: 30px;
    height: 30px;
}

QPushButton#next {
    border-image: url(../icons/next_hover.png);
    width: 30px;
    height: 30px;
}

QPushButton#add_to_favorite {
    border-image: url(../icons/heart.png);
    width: 12px;
    height: 12px;
    border: 0px solid #993333;
    background-color: #272727;
}

QPushButton#add_to_favorite:hover {
}

QPushButton#add_to_favorite:checked {
    border-image: url(../icons/heart_hover.png);
}

QPushButton#radio_btn {
    font-size: 20px;
    text-align: left;
}

QPushButton#radio_btn:hover {
    color: #993333;
}

QPushButton#login_btn {
    border-image: url(../icons/login.png);
}

QPushButton#login_btn:hover {
    width: 50px;
    height: 50px;
    border-image: url(../icons/login_hover.png);
}

QPushButton#help_btn {
    border-image: url(../icons/help.png);
}

QPushButton#help_btn:hover {
    width: 50px;
    height: 50px;
    border-image: url(../icons/help_hover.png);
}

QPushButton#playlist_name {
    font-size: 12px;
    background-color: transparent;
    text-align: left;
}

QPushButton#playlist_name:hover {

}

/* ****************************** */
/* QLineEdit */
/* ****************************** */

QLineEdit#search_edit {
    border: 1px solid #993333;
    border-radius: 5px;
    selection-background-color: #993333;
}

QLineEdit#search_edit:focus {
    border-color: #CCCCCC; 
}


/* ****************************** */
/* QPushButton */
/* ****************************** */

QPushButton#search_btn {
    border-image: url(../icons/search_hover.png);
    border: 0px solid #993333;
}

QPushButton#search_btn:hover{
}

/* ****************************** */
/* QStatusBar */
/* ****************************** */

QStatusBar {
    color: #993333;
}


/* ****************************** */
/* QLabel */
/* ****************************** */


QLabel#title{
    color: #AAA;
    font-size: 12px;
    padding-left: 5px;
    margin: 10px 0;
}

QLabel#playlist_title, QLabel#musiclist_title {
    font-size: 20px;
    background-color: #222222;
}

QLabel#playlist_img_favorite {
    background-color: transparent;
    border-image: url(../icons/playlist_favorite.png);
}

QLabel#playlist_img_mine {
    background-color: transparent;
    border-image: url(../icons/playlist_mine.png);
}


/* ****************************** */
/* QScrollBar */
/* ****************************** */

QScrollBar:vertical {
    margin: 0px 0;
    border: 0px solid grey;
    background: #222;
    width: 6px;
    border-radius: 3px;
}

QScrollBar::handle:vertical {
    width: 6px;
    background: #993333;
    border-radius: 3px;
    margin: 0 0;
    border: 0px solid #993333;
}

 QScrollBar::add-line:vertical {
     border: 0px solid grey;
     background: #222;
     height: 20px;
     subcontrol-position: bottom;
     subcontrol-origin: margin;
 }

 QScrollBar::sub-line:vertical {
     border: 0px solid grey;
     background: #222;
     height: 20px;
     subcontrol-position: top;
     subcontrol-origin: margin;
 }

/* ****************************** */
/* QDialog */
/* ****************************** */
QDiaLog#login_dilog QPushButton {
    border: 1px solid #993333;
}
#login_dialog QPushButton:hover {
    color: #993333;
}
#login_dialog QLineEdit {
    border: 1px solid #993333;
}

/* ****************************** */
/* QHeaderView */
/* ****************************** */

QHeaderView {
}

QHeaderView::section:vertical {
    padding-left: 15px;
    width: 40px;
    border: 0px solid #993333;
}

QHeaderView::section:vertical:checked {
  background-color: #4F2F2F;
}

QHeaderView::section:horizontal {
    font-weight: normal;
    color: #CCCCCC;
    border: 0px solid #993333;
    border-bottom: 1px solid #999;
    border-top: 1px solid #999;
    height: 24px;
    padding-top: 6px;
    font-size: 15px;
}

/* ****************************** */
/* QListWidget */
/* ****************************** */

QListWidget {
    background-color: #272727;
    color: #CCC;
}

QListWidget::item {
    outline: none;
    border-radius: 8px;
}

QListWidget::item {
    width: 180px;
}

QListWidget::item:selected {
    outline: none;
    border: none;
    color: white;
    background-color: #4F2F2F;
}

QListWidget::item:focus {
    outline: none;
    border: 0px;
}


/* ****************************** */
/* QAbstractItemView */
/* ****************************** */

QAbstractItemView {
    border: 0px solid #993333;
}


/* ****************************** */
/* QTableWidget */
/* ****************************** */

QTableWidget {
    alternate-background-color: #252525;
}

QTableWidget::item{ 
    text-align: left;
    border-radius: 0px;
    selection-background-color: #993333;
    outline: none;
    color: #CCCCCC;
}

QTableWidget::item:selected{
    outline: none;
    border: none;
    background-color: #4F2F2F;
}
QTableWidget::item:focus {
    outline: none;
    border: 0px;
}

QTableView QTableCornerButton::section {
    border: 0px solid #993333;
    border-bottom: 1px solid #999;
    border-top: 1px solid #999;
}


/* ****************************** */
/* QProgressBar */
/* ****************************** */

QProgressBar {
    border: 0px solid #999999;
    /* background-color: #AD0600; */
    background-color: #444;
    border-radius: 1px;
    text-align: center;
}

QProgressBar::chunk {
    background-color: #993333;
}

/* ****************************** */
/* QScrollArea */
/* ****************************** */

QScrollArea {
    border: 0px solid #993333;
}

/* ****************************** */
/* QToolTip */
/* ****************************** */

QToolTip {
    background-color: transparent;
    color: #993333;
}
