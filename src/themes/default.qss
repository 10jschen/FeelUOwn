/* ****************************** */
/* QHeaderView */
/* ****************************** */

QHeaderView {
}

QHeaderView::section:vertical {
    padding-left: 15px;
    width: 40px;
    background-color: #222222;
    border: 0px solid #993333;
}

QHeaderView::section:vertical:checked {
  background-color: #4F2F2F;
}

QHeaderView::section:horizontal {
    font-weight: normal;
    background-color: #222222;
    color: #CCCCCC;
    border: 0px solid #993333;
    border-bottom: 1px solid #993333;
    border-top: 1px solid #993333;
    /* margin-right: 10px; */
    height: 24px;
    padding-top: 6px;
    font-size: 15px;
}

/* ****************************** */
/* QListWidget */
/* ****************************** */

QListWidget::item {
    outline: none;
    background-color: #222222;
    color: #CCCCCC;
    border-radius: 8px;
}

QListWidget::item {
    width: 180px;
}

QListWidget::item:selected {
    outline: none;
    border: none;
    background-color: #4F2F2F;
}

QListWidget::item:focus {
    outline: none;
    border: 0px;
}


/* ****************************** */
/* QAbstractItemView */
/* ****************************** */

QAbstractItemView {
    background-color: #222222;
    border: 0px solid #993333;
}


/* ****************************** */
/* QTableWidget */
/* ****************************** */

QTableWidget {
    alternate-background-color: #252525;
}

QTableWidget::item{ 
    text-align: left;
    border-radius: 0px;
    selection-background-color: #993333;
    outline: none;
    color: #CCCCCC;
}

QTableWidget::item:selected{
    outline: none;
    border: none;
    background-color: #4F2F2F;
}
QTableWidget::item:focus {
    outline: none;
    border: 0px;
}

QTableView QTableCornerButton::section {
    border: 0px solid #993333;
    border-bottom: 1px solid #993333;
    border-top: 1px solid #993333;
    background: #222222;
}
