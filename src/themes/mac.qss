}

QPushButton#search_btn:hover{
}

/* ****************************** */
/* QStatusBar */
/* ****************************** */

QStatusBar {
    color: #CCCCCC;
}


/* ****************************** */
/* QLabel */
/* ****************************** */


QLabel#title{
    background-color: #EEE;
}

QLabel#time_label, QLabel#music_title {
    background-color: #E0DEE1;
}


/* ****************************** */
/* QScrollBar */
/* ****************************** */

QScrollBar:vertical {
    margin: 0px 0;
    border: 0px solid grey;
    width: 6px;
    border-radius: 3px;
    background-color: #DDD;
}

QScrollBar::handle:vertical {
    width: 6px;
    background: #993333;
    border-radius: 3px;
    margin: 0 0;
    border: 0px solid #CCCCCC;
}

 QScrollBar::add-line:vertical {
     border: 0px solid grey;
     background: #DDD;
     height: 20px;
     subcontrol-position: bottom;
     subcontrol-origin: margin;
 }

 QScrollBar::sub-line:vertical {
     border: 0px solid grey;
     background: #DDD;
     height: 20px;
     subcontrol-position: top;
     subcontrol-origin: margin;
 }

/* ****************************** */
/* QDialog */
/* ****************************** */
QDiaLog#login_dilog {
    border: 1px solid #CCCCCC;
}
#login_dialog:hover {
    color: #CCCCCC;
}

/* ****************************** */
/* QHeaderView */
/* ****************************** */

QHeaderView {
}

QHeaderView::section:vertical {
    padding-left: 15px;
    width: 40px;
    border: 0px solid #CCCCCC;
}

QHeaderView::section:vertical:checked {
  background-color: #4F2F2F;
}

QHeaderView::section:horizontal {
    font-weight: normal;
    color: #CCCCCC;
    border: 0px solid #CCCCCC;
    border-bottom: 1px solid #999;
    border-top: 1px solid #999;
    height: 24px;
    padding-top: 6px;
    font-size: 15px;
}

/* ****************************** */
/* QListWidget */
/* ****************************** */

QListWidget {
    color: #222;
    background-color: #EEE;
}

QListWidget::item {
    outline: none;
    border-radius: 8px;
}

QListWidget::item {
    width: 180px;
}

QListWidget::item:selected {
    outline: none;
    border: none;
    color: white;
    background-color: #993333;
}

QListWidget::item:focus {
    outline: none;
    border: 0px;
}


/* ****************************** */
/* QAbstractItemView */
/* ****************************** */

QAbstractItemView {
    border: 0px solid #CCCCCC;
}


/* ****************************** */
/* QTableWidget */
/* ****************************** */

QTableWidget {
    alternate-background-color: #252525;
}

QTableWidget::item{ 
    text-align: left;
    border-radius: 0px;
    selection-background-color: #CCCCCC;
    outline: none;
    color: #CCCCCC;
}

QTableWidget::item:selected{
    outline: none;
    border: none;
    background-color: #4F2F2F;
}
QTableWidget::item:focus {
    outline: none;
    border: 0px;
}

QTableView QTableCornerButton::section {
    border: 0px solid #CCCCCC;
    border-bottom: 1px solid #999;
    border-top: 1px solid #999;
}


/* ****************************** */
/* QProgressBar */
/* ****************************** */

QProgressBar {
    border: 0px solid #999999;
    /* background-color: #AD0600; */
    background-color: #444;
    border-radius: 1px;
    text-align: center;
}

QProgressBar::chunk {
    background-color: #CCCCCC;
}

/* ****************************** */
/* QScrollArea */
/* ****************************** */

QScrollArea {
    border: 0px solid #CCCCCC;
}
