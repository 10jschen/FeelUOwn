    width: 30px;
    height: 30px;
}
QPushButton#last:hover {
    border-image: url(../icons/last_hover.png);
}

QPushButton#next {
    border-image: url(../icons/next.png);
    width: 30px;
    height: 30px;
}
QPushButton#next:hover {
    border-image: url(../icons/next_hover.png);
}

QPushButton#add_to_favorite {
    border-image: url(../icons/heart_mix.png);
    width: 12px;
    height: 12px;
    border: 0px solid #CCCCCC;
}

QPushButton#add_to_favorite:hover {
}

QPushButton#add_to_favorite:checked {
    border-image: url(../icons/heart_hover.png);
}

QPushButton#radio_btn {
